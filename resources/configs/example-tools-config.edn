;; Example configuration with tools-config and start-nrepl-cmd
{:allowed-directories ["." "src" "test" "resources"]
 :emacs-notify false
 :write-file-guard :partial-read
 :cljfmt true
 :bash-over-nrepl true

 ;; Optional: Start nREPL server automatically and discover port
 ;; If specified, the MCP server will execute this command and parse the output for a port number
 ;; Common examples:
 ;; :start-nrepl-cmd "lein repl :start :port 0"  ; Leiningen with dynamic port
 ;; :start-nrepl-cmd "clojure -M:nrepl"          ; deps.edn alias
 ;; :start-nrepl-cmd "npx shadow-cljs watch app" ; Shadow-cljs
 :start-nrepl-cmd "lein repl :start :port 0"

 ;; Configure specific tools with custom settings
 :tools-config {:dispatch_agent {:model :openai/o3}
                :architect {:model :openai/gpt-4o}
                :code_critique {:model :anthropic/claude-3-haiku-20240307}
                :bash {:default-timeout-ms 60000 ; Default timeout in milliseconds
                       :working-dir "/opt/project" ; Default working directory
                       :bash-over-nrepl true} ; Override global bash-over-nrepl
                ;; Add more tool configurations as needed
                ;; :another_tool {:setting "value"}
                }

 ;; Optional: Define custom models if using non-default configurations
 :models {:openai/o3 {:model-name "o3-mini"
                      :temperature 0.3
                      :max-tokens 4096
                      :api-key [:env "OPENAI_API_KEY"]}
          :openai/gpt-4o {:model-name "gpt-4o"
                          :temperature 0.5
                          :api-key [:env "OPENAI_API_KEY"]}
          :anthropic/claude-3-haiku-20240307 {:model-name "claude-3-haiku-20240307"
                                              :temperature 0.3
                                              :api-key [:env "ANTHROPIC_API_KEY"]}}}
